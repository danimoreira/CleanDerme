<div id="modalIndicarPresenca" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Indicar presença</h4>
            </div>
            <div class="modal-body modal-lg">

                <div class="container-fluid">
                    <div class="row">

                        <div class="form-inline">

                            <input type="hidden" name="IdAgendaPresenca" id="IdAgendaPresenca" value="0" />

                            <div class="form-group col-xs-12 col-sm-12 col-md-12">
                                <i class="fa fa-user fa-2x"></i> <span class="texto-evento" id="ClientePresenca"></span>
                            </div>


                            <div class="form-group col-xs-6 col-sm-6 col-md-6">
                                <i class="fa fa-user-md fa-2x"></i> <span class="texto-evento" id="ProfissionalPresenca"></span>
                            </div>

                            <div class="form-group col-xs-6 col-sm-6 col-md-6">
                                <i class="fa fa-cogs fa-2x"></i> <span class="texto-evento" id="EspecialidadePresenca"></span>                                
                            </div>

                            <div class="form-group col-xs-6 col-sm-6 col-md-6">
                                <i class="fa fa-calendar fa-2x"></i> <span class="texto-evento" id="InicioConsultaPresenca"></span>                                
                            </div>

                            <div class="form-group col-xs-6 col-sm-6 col-md-6">
                                <i class="fa fa-calendar fa-2x"></i> <span class="texto-evento" id="FimConsultaPresenca"></span>
                            </div>

                            <div class="form-group col-xs-12 col-sm-12 col-md-12">
                                <label class="control-label label-obrigatorio">Situação</label>
                                <br />
                                <div class="col-xs-2 col-md-2 col-sm-2">
                                    <label class="radio">
                                        <input type="radio" class="hidden chkSituacaoPresenca" name="SituacaoPresenca" value="1" checked> <i class="fa fa-thumbs-up fa-2x text-success" for="SituacaoPresenca"  data-toggle="tooltip" title="Presente"></i>
                                    </label>
                                </div>
                                <div class="col-xs-2 col-md-2 col-sm-2">
                                    <label class="radio">
                                        <input type="radio" class="hidden chkSituacaoPresenca" name="SituacaoPresenca" value="1" checked> <i class="fa fa-thumbs-down fa-2x text-danger" for="SituacaoPresenca"  data-toggle="tooltip" title="Falta"></i>
                                    </label>
                                </div>
                            </div>

                            <div class="form-group col-xs-12 col-sm-12 col-md-12">
                                <label class="control-label">Justificativa</label>
                                <textarea name="Justificativa" class="form-control" rows="5"></textarea>
                            </div>

                        </div>

                    </div>

                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="modalPresenca.salvarPresenca()">Salvar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
            </div>
        </div>

    </div>
</div>
