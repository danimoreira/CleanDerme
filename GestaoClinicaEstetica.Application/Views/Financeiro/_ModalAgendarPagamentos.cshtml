<div id="modalAgendarPagamento" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Agendar pagamentos</h4>
            </div>
            <div class="modal-body">

                <div class="container-fluid">
                    <div class="row">

                        <div class="form-inline">

                            <div class="form-group col-xs-12 col-md-12 col-sm-12">
                                <label class="control-label label-obrigatorio">Cliente:</label>
                                <select class="form-control" name="CodClienteAgendarPagto" id="CodCliente" required data-LabelError="Cliente">
                                    <option value=""></option>
                                    @foreach (var item in ViewBag.ListaClientes)
            {
                        <option value="@item.Value">@item.Text</option>
}
                                </select>
                            </div>

                            <div class="form-group col-xs-12 col-md-6 col-sm-6">
                                <label class="control-label label-obrigatorio">Especialidade:</label>
                                <select class="form-control" name="CodEspecialidadeAgendarPagto" id="CodEspecialidade" required data-LabelError="Especialidade" onchange="modalAgendarPagto.recuperarCombosDependentes()">
                                    <option value=""></option>
                                    @foreach (var item in ViewBag.ListaEspecialidades)
            {
                        <option value="@item.Value">@item.Text</option>
}
                                </select>
                            </div>

                            <div class="form-group col-xs-12 col-md-6 col-sm-6">
                                <label class="control-label label-obrigatorio">Profissional:</label>
                                <select class="form-control" name="CodProfissionalAgendarPagto" id="CodigoProfissional" required data-LabelError="Profissional" disabled></select>
                            </div>

                            <div class="form-group col-xs-12 col-md-12 col-sm-12">
                                <label class="control-label label-obrigatorio">Serviço:</label>
                                <select class="form-control" name="CodServicoAgendarPagto" id="CodServico" disabled required data-LabelError="Serviço" onchange="modalAgendarPagto.recuperarInfoServico()"></select>
                            </div>

                            <div class="form-group col-xs-3 col-md-3 col-sm-3">
                                <label class="control-label label-obrigatorio">Quantidae de Meses:</label>
                                <input type="text" class="form-control date" name="QtdeMesesAgendarPagto" required data-LabelError="Quantidade de Meses" />
                            </div>

                            <div class="form-group col-xs-3 col-md-3 col-sm-3">
                                <label class="control-label label-obrigatorio">Data 1º Vencimento:</label>
                                <input type="text" class="form-control date" name="PrimeiroVenctoAgendarPagto" required data-LabelError="Data de Vencimento" value="@DateTime.Now.ToString("dd/MM/yyyy")" />
                            </div>

                            <div class="form-group col-xs-3 col-md-3 col-sm-3">
                                <label class="control-label label-obrigatorio">Dia Vencimento:</label>
                                <input type="text" class="form-control" name="DiaVenctoAgendarPagto" required data-LabelError="Data de Pagamento" />
                            </div>

                            <div class="form-group col-xs-3 col-md-3 col-sm-3">
                                <label class="control-label label-obrigatorio">Valor Mensal:</label>
                                <input type="text" class="form-control money2" name="ValorPagoAgendarPagto" required data-LabelError="Valor recebido" />
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="modalAgendarPagto.realizarAgendamentos()">Agendar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
            </div>
        </div>

    </div>
</div>
