<div id="modalConsulta" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Marcar consulta</h4>
            </div>
            <div class="modal-body modal-lg">

                <div class="container-fluid">
                    <div class="row">

                        <div class="form-inline">

                            <input type="hidden" name="IdConsulta" id="IdConsulta" value="0" />

                            <div class="form-group col-xs-12 col-md-12 col-sm-12">
                                <label class="control-label label-obrigatorio">Cliente:</label>
                                <select class="form-control" name="CodCliente" id="CodClienteConsulta" required data-LabelError="Cliente">
                                    <option value=""></option>
                                    @foreach (var item in ViewBag.ListaClientes)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group col-xs-12 col-md-12 col-sm-12">
                                <label class="control-label label-obrigatorio">Especialidade:</label>
                                <select class="form-control" name="CodEspecialidade" id="CodEspecialidadeConsulta" required data-LabelError="Especialidade" onchange="modalConsulta.recuperarCombosDependentes()">
                                    <option value=""></option>
                                    @foreach (var item in ViewBag.ListaEspecialidades)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group col-xs-12 col-md-12 col-sm-12">
                                <label class="control-label label-obrigatorio">Profissional:</label>
                                <select class="form-control" name="CodProfissional" id="CodProfissionalConsulta" required data-LabelError="Profissional" disabled>
                                    <option value=""></option>
                                    @foreach (var item in ViewBag.ListaProfissionais)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group col-xs-12 col-md-12 col-sm-12">
                                <label class="control-label">Serviço:</label>
                                <select class="form-control" name="CodServico" id="CodServicoConsulta" required data-LabelError="Serviço" disabled>
                                    <option value=""></option>
                                    @foreach (var item in ViewBag.ListaServicos)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group col-xs-4 col-md-4 col-sm-4">
                                <label class="control-label label-obrigatorio">Data:</label>
                                <input type="date" class="form-control" name="DataConsulta" required data-LabelError="Data" id="DataConsulta" />
                            </div>

                            <div class="form-group col-xs-4 col-md-4 col-sm-4">
                                <label class="control-label label-obrigatorio">Horário Início:</label>
                                <input type="text" class="form-control time" name="HoraInicioConsulta"  required data-LabelError="Horário Início" id="HoraInicioConsulta" />
                            </div>

                            <div class="form-group col-xs-4 col-md-4 col-sm-4">
                                <label class="control-label label-obrigatorio">Horário Fim:</label>
                                <input type="text" class="form-control time" name="HoraFimConsulta"  required data-LabelError="Horário Fim" id="HoraFimConsulta" />
                            </div>

                            <div class="form-group col-xs-12 col-md-12 col-sm-12">
                                <label class="control-label">Observação:</label>
                                <textarea class="form-control" name="Observacao" id="ObservacaoConsulta" rows="4"></textarea>
                            </div>

                        </div>

                    </div>

                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="modalConsulta.NovoEvento()"><i class="fa fa-file"></i> Novo</button>
                <button type="button" class="btn btn-danger" onclick="modalConsulta.excluirEvento()"><i class="fa fa-trash-o"></i> Excluir</button>
                <button type="button" class="btn btn-success" onclick="modalConsulta.realizarAgendamento()"><i class="fa fa-save"></i>  Agendar</button>
            </div>
        </div>

    </div>
</div>